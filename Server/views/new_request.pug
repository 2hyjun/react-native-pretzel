doctype html
html
    head
        meta(charset='utf8')
        title New Help Me
    body
        fieldset
            form(action='/timeline/new_request' method='post')
                p   
                    h3 제목:
                        input(type='text' name='title' value='title')
                p
                    h3 타입:
                        input(list='types' name='type')
                        datalist(id='types')
                            option(value='해주세요')
                            option(value='해줄게요')
                p
                    h3 품목:
                        input(list='contents' name='content')                
                        datalist(id='contents')
                            option(value='데려다줘')
                            option(value='책반납')
                            option(value='커피')
                            option(value='토스트')
                            option(value='밥버거')
                            option(value='기타')
                p
                    h3  상세 사항:
                        textarea(name='detailInfo') Detail Info
                p
                    h3 예상 금액:
                        input(type='number' name='expectedPrice' placeholder='expected Price')
                p
                    h3 배달료: 
                        input(type='number' name='fee' placeholder='fee')
                p
                    h3 배달 기한:
                        input(type='datetime-local' name='deadLine')
                p
                    input(type='submit')
